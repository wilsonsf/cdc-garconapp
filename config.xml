<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        id="br.com.defarias.garconapp"
        version="0.0.1">

    <name>SoDeCenoura-Interno</name>
    <description>
        Aplicação de controle interno para os garçons do Só de Cenoura.
    </description>
    <author email="wilsonsf1@gmail.com" href="http://cordova.io">
        Wilson Farias
    </author>

    <!-- <icon src="icon.png"/>
    <g:splash src="splash.png"/> -->

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- Preferências globais -->
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <!-- Fim das preferências globais -->

    <platform name="android">
        <preference name="permissions" value="none" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="deployment-target" value="9.0" />
        <preference name="target-device" value="handset" />

        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
